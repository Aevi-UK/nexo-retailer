<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Switch">
        <item name="android:textSize">20sp</item>
        <item name="android:background">@drawable/item_background</item>
        <item name="android:padding">20dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:paddingRight">30dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
    </style>

    <style name="DefaultButton" parent="Base.TextAppearance.AppCompat.Button">
        <item name="android:padding">12dp</item>
        <item name="android:background">@drawable/default_button</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:textColor">@color/defaultButtonText</item>
        <item name="android:layout_margin">10dp</item>
    </style>

    <style name="DropDownSpinner" parent="Widget.AppCompat.Spinner">
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:textColor">@color/itemTextColor</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">@drawable/item_background</item>
        <item name="android:padding">20dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">30dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:dropDownVerticalOffset">?attr/actionBarSize</item>
        <item name="android:popupBackground">@android:color/white</item>
        <item name="android:popupElevation">@dimen/spinner_elevation</item>
        <item name="android:stateListAnimator">@drawable/spinner_sla</item>
    </style>

    <style name="Item">
        <item name="android:padding">12dp</item>
        <item name="android:background">@drawable/item_background</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>

    <style name="ItemText">
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:textColor">@color/itemTextColor</item>
    </style>

    <style name="Header" parent="Base.TextAppearance.AppCompat.Medium">
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>

    <style name="Container">
        <item name="android:padding">20dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
    </style>

</resources>